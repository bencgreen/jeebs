<?xml version="1.0" encoding="utf-8"?>
<Project>
	<PropertyGroup Label="Framework and Language">
		<TargetFramework>netstandard2.1</TargetFramework>
		<LangVersion>latest</LangVersion>
		<Nullable>enable</Nullable>
	</PropertyGroup>
	<ItemGroup>
		<AssemblyAttribute Include="System.Runtime.CompilerServices.InternalsVisibleToAttribute">
			<_Parameter1>Tests.$(AssemblyName)</_Parameter1>
		</AssemblyAttribute>
	</ItemGroup>
	<PropertyGroup Label="Package">
		<Authors>Ben Green</Authors>
		<Company>bcg|design</Company>
		<Copyright>Copyright Â© bcg 2013-2020</Copyright>
		<Version>4.1.0</Version>
		<VersionSuffix>-beta.$([System.DateTime]::Now.ToString(yyMMddhhmm))</VersionSuffix>
		<Description>$(MSBuildProjectName) library</Description>
	</PropertyGroup>
	<PropertyGroup>
		<LibraryPackFile>Libraries.pack.props</LibraryPackFile>
		<LibraryPackPath>$([MSBuild]::GetPathOfFileAbove('$(LibraryPackFile)', '$(MSBuildThisFileDirectory)../'))</LibraryPackPath>
	</PropertyGroup>
	<PropertyGroup>
		<LibraryNugetFile>Libraries.nuget.props</LibraryNugetFile>
		<LibraryNugetPath>$([MSBuild]::GetPathOfFileAbove('$(LibraryNugetFile)', '$(MSBuildThisFileDirectory)../'))</LibraryNugetPath>
	</PropertyGroup>
	<Import Project="$(LibraryPackPath)" Condition="Exists('$(LibraryPackPath)')"/>
	<!--<Import Project="$(LibraryNugetPath)" Condition="Exists('$(LibraryNugetPath)')"/>-->
</Project>