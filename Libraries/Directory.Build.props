<?xml version="1.0" encoding="utf-8"?>
<Project>
	<PropertyGroup Label="Framework and Language">
		<TargetFramework>netstandard2.1</TargetFramework>
		<LangVersion>latest</LangVersion>
		<Nullable>enable</Nullable>
	</PropertyGroup>
	<ItemGroup Label="Test Internals">
		<AssemblyAttribute Include="System.Runtime.CompilerServices.InternalsVisibleToAttribute">
			<_Parameter1>Tests.$(AssemblyName)</_Parameter1>
		</AssemblyAttribute>
	</ItemGroup>
	<ItemGroup Label="Licence">
		<None Include="../../LICENSE" Pack="true" PackagePath=""/>
	</ItemGroup>
	<PropertyGroup Label="Package">
		<Authors>Ben Green</Authors>
		<Company>bcg|design</Company>
		<Copyright>Copyright Â© bcg 2013-2020</Copyright>
		<Version>4.1.0</Version>
		<VersionSuffix>-beta.$([System.DateTime]::Now.ToString(yyMMddhhmm))</VersionSuffix>
		<Description>$(MSBuildProjectName) library</Description>
		<PackageLicenseFile>LICENSE</PackageLicenseFile>
	</PropertyGroup>
	<PropertyGroup Label="Documentation" Condition="'$(Configuration)'=='Release'">
		<GenerateDocumentationFile>true</GenerateDocumentationFile>
	</PropertyGroup>
	<PropertyGroup>
		<LocalPackFile>Local.pack.props</LocalPackFile>
		<LocalPackPath>$([MSBuild]::GetPathOfFileAbove('$(LocalPackFile)', '$(MSBuildThisFileDirectory)../'))</LocalPackPath>
	</PropertyGroup>
	<PropertyGroup>
		<LocalPushFile>Local.push.props</LocalPushFile>
		<LocalPushPath>$([MSBuild]::GetPathOfFileAbove('$(LocalPushFile)', '$(MSBuildThisFileDirectory)../'))</LocalPushPath>
	</PropertyGroup>
	<Import Project="$(LocalPackPath)" Condition="Exists('$(LocalPackPath)')"/>
	<!--<Import Project="$(LocalPushPath)" Condition="Exists('$(LocalPushPath)')"/>-->
</Project>